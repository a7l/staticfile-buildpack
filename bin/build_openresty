#!/bin/bash
# http://openresty.org/#Installation
# https://github.com/cloudfoundry-community/nginx-buildpack#building-the-nginx-package

set -e #halt on any error

pcre_version=8.37
openresty_version=1.9.3.1
sudo apt-get update
sudo apt-get install -fy build-essential zlib1g-dev libreadline-dev libncurses5-dev libpcre3-dev libssl-dev perl make



src=~/src
build=/app/openresty
target=/vagrant/vendor

sudo rm -rf $build $src && sudo mkdir -p $build && sudo chown -R vagrant:vagrant $build
mkdir -p $src
cd $src

wget ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-$pcre_version.tar.gz
tar -xzvf pcre-$pcre_version.tar.gz
cd pcre-$pcre_version/

./configure --prefix=$build
make
sudo make install
sudo ldconfig # this is important otherwise nginx will compile but fail to load

cd $src
wget http://openresty.org/download/ngx_openresty-$openresty_version.tar.gz
tar -xvzf ngx_openresty-$openresty_version.tar.gz
cd ngx_openresty-$openresty_version

./configure --prefix=$build  --with-pcre=$src/pcre-$pcre_version --with-http_ssl_module --with-http_gzip_static_module --with-http_stub_status_module
make
sudo make install

# Remove extras (help, utilities etc)

sudo rm -rf $build/bin
sudo rm -rf $build/sbin/nginx.old
sudo rm -rf $build/share/man

# Ensure we include the licenses in the tarball

# PCRE license is in $build/share/doc/pcre/LICENCE
# Put Nginx license is in $build/share/doc/nginx
sudo mkdir -p $build/share/doc/nginx
sudo cp $src/ngx_openresty-$openresty_version/README.markdown $build/share/doc/nginx

cd /tmp/
wget https://codeload.github.com/bungle/lua-resty-session/tar.gz/v2.2 -O lua-resty-session.tar.gz --no-check-certificate
tar -xvzf lua-resty-session.tar.gz
# Add lua-resty-session for session management
sudo cp -r /tmp/lua-resty-session-2.2/lib/resty $build/lualib

# Archive it all up
mkdir -p $target
cd /app
tar -zcvpf $target/openresty-$openresty_version.tar.gz openresty